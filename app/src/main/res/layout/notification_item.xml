<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="10dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/notification_item_top_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/notification_user_image"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:layout_height="65dp"
                android:layout_width="65dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/notification_inviting_user"
                    android:lines="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="name+inviteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/notification_invited_teams"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:lines="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="name+inviteText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="end"
            android:layout_below="@+id/notification_item_top_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:clickable="false"
                android:layout_marginHorizontal="15dp"
                android:id="@+id/notification_response_button"
                android:text="Accepted"
                android:visibility="visible"
                android:textColor="#79000000"
                android:textAllCaps="false"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:backgroundTint="#7000FF00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:id="@+id/notification_invite_accept"
                android:text="Accept"
                android:visibility="visible"
                android:textColor="#000000"
                android:textAllCaps="false"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:backgroundTint="#00ff00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
            <Button
                android:layout_marginHorizontal="15dp"
                android:id="@+id/notification_invite_reject"
                android:text="Reject"
                android:visibility="visible"
                android:textColor="#FFF"
                android:textAllCaps="false"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:backgroundTint="#ff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>